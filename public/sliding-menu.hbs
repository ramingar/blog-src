<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
<section>

    <style scoped type="text/css">
        .menu-cool {
            left: -85%;
            position: fixed;
            width: 85%;
        }

        .btn-toggle-menu {
            color: black;
            margin-right: -15px;
            position: absolute;
            right: 0;
            text-align: right;
            text-decoration: none;
            top: 10px;
            width: 100%;
        }

        .menu-cool-items {
            transition: transform 0.4s cubic-bezier(0.1, 0.7, 0.1, 1);
            transform: translateX(-5%);
            text-align: left;
            margin-top: 30px;
            border: 1px solid;
            background-color: gray;
        }

        #sliding-menu:target .menu-cool-items {
            transform: translateX(100%);
        }

        #sliding-menu:target .btn-menu-open {
            display: none;
        }

        .btn-menu-close {
            display: none;
        }

        #sliding-menu:target .btn-menu-close {
            display: block;
        }

    </style>

    <h1>Pruébalo desde el móvil</h1>


    <div class="menu-cool">
        <div id="sliding-menu">
            <a class="fa fa-bars btn-toggle-menu btn-menu-open" href="#sliding-menu"></a>
            <a class="fa fa-close btn-toggle-menu btn-menu-close" href="#"></a>
            <div class="menu-cool-items">
                <div>Este sería el menú molón</div>
            </div>
        </div>
    </div>

</section>