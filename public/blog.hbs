---
titleOfThisPage: "Blog"
---

<div class="container container-blog">
    <div class="row">
        <div class="box">

            {{#each (postsJSON posts)}}
                <div class="col-lg-12 text-center {{#gt @index 4}}hidden{{else}}displayed{{/gt}} postExcerpt">
                    <img class="img-responsive img-border img-full rmg-img-centered" src="{{pathAssets}}/img/{{this.data.headerImage}}" alt="Imagen de {{this.data.titleOfThisPage}}">
                    <h2>{{this.data.titleOfThisPage}}
                        <br/>
                        <small>
                            {{formatDate this.data.posted "%d"}} de
                            {{monthInSpanish (formatDate this.data.posted "%m")}} de
                            {{formatDate this.data.posted "%Y"}}
                        </small>
                    </h2>
                    <p>{{this.content}} [...]</p>
                    <a href="{{pathPosts}}{{this.dest}}" class="btn btn-default btn-lg">Lee m√°s</a>
                    <hr/>
                </div>
            {{/each}}

            <div class="col-lg-12 text-center">
                <ul class="pager">
                    <li id="previous" class="previous hidden"><a href="#" onclick="pagination.previous(5)">&larr; Nuevos</a></li>
                    <li id="next" class="next"><a href="#" onclick="pagination.next(5)">Viejos &rarr;</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>