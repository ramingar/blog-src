---
titleOfThisPage: "Blog"
---
<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Company
          <strong>blog</strong>
      </h2>
      <hr>
    </div>
    
    
    
    
    {{#each (postsJSON posts)}}
        <div class="col-lg-12 text-center postExcerpt">
          <img class="img-responsive img-border img-full" src="{{pathAssets}}/img/{{this.data.headerImage}}" alt="Imagen de {{this.data.titleOfThisPage}}">
          <h2>{{this.data.titleOfThisPage}}
              <br>
              <small>{{this.data.posted}}</small>
          </h2>
          <p>{{this.content}} [...]</p>
          <a href="{{pathPosts}}{{this.dest}}" class="btn btn-default btn-lg">Read More</a>
          <hr>
        </div>
    {{/each}}

    <div class="col-lg-12 text-center">
      <ul class="pager">
        <li class="previous"><a href="#">&larr; Newer</a></li>
        <li class="next"><a href="#">Older &rarr;</a></li>
      </ul>
    </div>
  </div>
</div>