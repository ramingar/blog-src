<!-- Script to Activate the Effects in Blog.html -->
<script>
    /*jslint undef: true */

    var Effects = (function () {
        'use strict';

        var toggleOnScroll = function (elementScrolled, elementHidden, position, reverse) {
            var hideNav = function () {
                elementHidden.addClass('hide-preserving');
            };

            var showNav = function () {
                elementHidden.removeClass('hide-preserving');
            };

            $(document).on('scroll', function () {
                var positionOnPage = elementScrolled[0].getBoundingClientRect().top;
                if (reverse) {
                    if (positionOnPage > position) {
                        showNav();
                    }
                } else {
                    if (positionOnPage < position) {
                        showNav();
                    }
                }
            });

            // End of scroll
            $(document).on('scroll', function () {
                var positionOnPage = elementScrolled[0].getBoundingClientRect().top;
                if (reverse) {
                    if (positionOnPage < position) {
                        showNav();
                    } else {
                        hideNav();
                    }
                } else {
                    if (positionOnPage >= position) {
                        showNav();
                    } else {
                        hideNav();
                    }
                }
            }, 2000);
        };

        return {
            toggleOnScroll: toggleOnScroll
        };
    })();
</script>